#include <stdio.h>

int buscar(int marco[], int n, int pagina) {
    for (int i = 0; i < n; i++)
        if (marco[i] == pagina)
            return 1; // Página encontrada
    return 0; // No encontrada
}

void fifo(int paginas[], int num_pags, int marcos) {
    int marco[marcos], pos = 0, fallos = 0;

    // Inicializamos marcos vacíos
    for (int i = 0; i < marcos; i++)
        marco[i] = -1;

    printf("\n---- Algoritmo FIFO ----\n");
    for (int i = 0; i < num_pags; i++) {
        if (!buscar(marco, marcos, paginas[i])) {
            marco[pos] = paginas[i]; // Reemplaza el más antiguo
            pos = (pos + 1) % marcos; // Avanza circularmente
            fallos++;
        }

        printf("Pág %2d -> ", paginas[i]);
        for (int j = 0; j < marcos; j++)
            if (marco[j] != -1) printf("%2d ", marco[j]);
        printf("\n");
    }

    printf("Fallos de página: %d\n", fallos);
}
